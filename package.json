{
    "name": "voice-of-hell",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "app": "cargo tauri dev",
        "dev": "vite dev",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "tauri": "tauri",
        "format": "pnpm run format_js && pnpm run format_rust",
        "format_js": "pnpm dlx prettier --write src/**/*.tsx",
        "format_rust": "cargo fmt --manifest-path=src-tauri/Cargo.toml"
    },
    "dependencies": {
        "@mantine/core": "^8.2.1",
        "@mantine/hooks": "^8.2.1",
        "@tabler/icons-react": "^3.34.1",
        "@tanstack/react-query": "^5.90.2",
        "@tauri-apps/api": "^2.0.3",
        "@tauri-apps/plugin-shell": "^2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@tauri-apps/cli": "^2.0.0",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@vitejs/plugin-react": "^4.2.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.5.0",
        "lint-staged": "^16.2.7",
        "prettier": "3.6.2",
        "typescript": "^5.2.2",
        "typescript-eslint": "^8.47.0",
        "vite": "^5.3.1",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "prettier": {},
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js, jsx,ts,tsx}": [
            "pnpm dlx eslint --quiet",
            "pnpm dlx prettier --check --ignore-unknown"
        ]
    }
}